/**register.wxss**/
page{
  height: 100%;
  width: 100%;
  background: linear-gradient(#66CCFF, #008800);
  display: flex;
  flex-direction: column;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 90%;
  margin: 50rpx auto;
}

.row{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.row input{
  width: 100%;
  height:100%;
  border-bottom: 1px solid #cccccc;
  border-left: 1px solid #cccccc;
}
.codeBtn{
  position: absolute;
  right: 0rpx;
  top: 0;
  color: #bbb;
  width: 30%;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.save{
  width: 100px;
  height: 80rpx;
  line-height: 80rpx;
}